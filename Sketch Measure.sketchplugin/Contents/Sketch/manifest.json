{
  "name": "Sketch Measure",
  "description": "A measure tool for measurements & design specs.",
  "author": "utom",
  "homepage": "https://github.com/utom/sketch-measure",
  "version": "0.8.0",
  "identifier": "com.utom.sketch-measure",
  "compatibleVersion": "3.3.2",
  "bundleVersion": 1,
  "commands": [{
    "name": "1. Create Overlay",
    "identifier": "overlay",
    "shortcut": "ctrl shift 1",
    "script": "Overlay.sketchscript"
  }, {
    "name": "2. Measure Size",
    "identifier": "size",
    "shortcut": "ctrl shift 2",
    "script": "Size.sketchscript"
  }, {
    "name": "3. Measure Spacing",
    "identifier": "spacing",
    "shortcut": "ctrl shift 3",
    "script": "Spacing.sketchscript"
  }, {
    "name": "4. Get Typography",
    "identifier": "typography",
    "shortcut": "ctrl shift 4",
    "script": "Typography.sketchscript"
  }, {
    "name": "5. Get Property",
    "identifier": "property",
    "shortcut": "ctrl shift 5",
    "script": "Property.sketchscript"
  }, {
    "name": "6. Draw Label",
    "identifier": "label",
    "shortcut": "ctrl shift 6",
    "script": "Label.sketchscript"
  }, {
    "name": "Toggle Measure Hidden",
    "identifier": "hidden",
    "shortcut": "ctrl shift h",
    "script": "Toggle Measure Hidden.sketchscript"
  }, {
    "name": "Toggle Measure Locked",
    "identifier": "locked",
    "shortcut": "ctrl shift l",
    "script": "Toggle Measure Locked.sketchscript"
  }, {
    "name": "Reset(Clear) Artboard Measure",
    "identifier": "reset",
    "shortcut": "",
    "script": "Clear Artboard Measure.sketchscript"
  }, {
    "name": "Move to @Specs",
    "identifier": "move",
    "shortcut": "",
    "script": "Move to @Specs.sketchscript"
  }],
  "menu": {
    "title": "Sketch Measure (New)",
    "items":[
      "size",
      "spacing",
      "overlay",
      "typography",
      "property",
      "label",
      "hidden",
      "locked",
      "reset",
      "move"
    ]

  }
}